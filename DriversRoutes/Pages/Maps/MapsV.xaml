<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DriversRoutes.Pages.Maps.MapsV"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:VM="clr-namespace:DriversRoutes.Pages.Maps"
    xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
    xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
    Title="MapsV"
    x:DataType="VM:MapsVM">



    <Grid ColumnDefinitions="*" RowDefinitions="*">



        <maps:Map BindingContext="{Binding Map}"            
            Grid.RowSpan="10"
            Grid.ColumnSpan="10">



            <maps:Map.Pins>

                <maps:Pin
                    Address="The city with a boardwalk"
                    Label="Santa Cruz"
                    Type="Place">
                    <maps:Pin.Location>
                        <sensors:Location>
                            <x:Arguments>
                                <x:Double>49.74918684945343</x:Double>
                                <x:Double>20.40889755094227</x:Double>
                            </x:Arguments>
                        </sensors:Location>
                    </maps:Pin.Location>
                </maps:Pin>
            </maps:Map.Pins>


        </maps:Map>

    </Grid>




</ContentPage>